<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.landing.Verification_Fragment">
    <ImageView
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_112"
        android:layout_marginLeft="@dimen/dp_52"
        android:src="@mipmap/shoujihaoma"
        />
    <EditText
        android:id="@+id/et_phones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_102"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginRight="@dimen/dp_48"
        android:gravity="center"
        android:maxLength="11"
        android:digits="0123456789"
        android:hint="请输入手机号码"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_153"
        android:layout_marginLeft="@dimen/dp_53"
        android:text="未注册的用户将直接创建用户"/>
    <Button
        android:id="@+id/bt_landings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_213"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/shop"
        android:text="登陆"
        />

    <TextView
        android:id="@+id/els"
        android:layout_width="@dimen/dp_78"
        android:layout_height="@dimen/dp_18"
        android:text="其他方式登陆"
        android:layout_marginTop="@dimen/dp_311"
        android:layout_marginLeft="@dimen/dp_133"
        android:layout_marginRight="@dimen/dp_133"
        />
    <ImageView
        android:id="@+id/weixin"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_23"
        android:src="@mipmap/weixin"
        android:layout_marginTop="@dimen/dp_343"
        android:layout_marginLeft="@dimen/dp_158"
        android:layout_marginRight="@dimen/dp_158"
        />
    <TextView
        android:layout_width="@dimen/dp_229"
        android:layout_height="@dimen/dp_16"
        android:text="@string/warning"
        android:layout_marginTop="@dimen/dp_400"
        android:layout_marginRight="@dimen/dp_57"
        android:layout_marginLeft="@dimen/dp_57"/>
</RelativeLayout>